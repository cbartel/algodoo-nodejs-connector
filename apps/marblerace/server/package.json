{
  "name": "marblerace-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/plugin.cjs",
  "module": "dist/plugin.js",
  "types": "dist/plugin.d.ts",
  "scripts": {
    "build": "tsup --tsconfig ./tsconfig.json src/plugin.ts src/room.ts src/orchestrator.ts src/transport.ts src/http-utils.ts src/output-event-mapper.ts src/scenes-cache.ts src/schema.ts --format esm,cjs --clean --external algodoo-server",
    "clean": "rimraf dist",
    "test": "vitest run"
  },
  "dependencies": {
    "colyseus": "^0.16.4",
    "@colyseus/ws-transport": "^0.16.3",
    "@colyseus/schema": "^3.0.6",
    "algodoo-server": "workspace:*",
    "marblerace-protocol": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "@types/node": "^20.11.0"
  }
}
